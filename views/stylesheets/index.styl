peach = #fff9df
btnHover = false;

* {margin:0;padding:0;}

h1
  text-align center
  margin 0 auto
  
html, body
  height 100%
  
body
  font-family: Courier, Arial, sans-serif, Helvetica;
  background-color peach
  font-size 60px
  font-weight 200

input
  visibility hidden
  width 0
  height 0

#btn-circle
  text-align center
  position absolute
  background-color: #33b5e5;
  line-height: 380px;
  font-size 40px
  width: 400px;
  height: 400px;
  border-radius: 50%;
  box-shadow: 0px 3px 8px #aaa, inset 0px 5px 10px #fff;
  opacity 0.6
  margin-top -200px
  margin-left -200px
  top 60%
  left 50%
  cursor pointer
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;  
  
#btn-circle:hover
  width 500px
  height 500px
  font-size 50px
  line-height 480px
  opacity 1.0
  margin-top -250px
  margin-left -250px
  box-shadow: 0px 20px 25px #aaa, inset 0px 5px 10px #fff;
  
.container
  height 650px
  width 100%
  position absolute
  margin-top -300px
  top 50%
  
